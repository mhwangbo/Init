if [ ! -f /etc/crontab_md5 ]
then
	md5sum /etc/crontab > /etc/crontab_md5
fi

md5sum /etc/crontab > /etc/crontab_tmp
CHANGE=$(diff /etc/crontab_md5 /etc/crontab_tmp)

if [ "$CHANGE" != "" ]
then
	md5sum /etc/crontab > /etc/crontab_md5
	mail -s "Modified" root < /etc/crontab
fi
rm /etc/crontab_tmp

# echo "0 0	* * *	root	sh ~/04" >> /etc/crontab
